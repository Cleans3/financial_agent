{
  "name": "financial-agent-desktop",
  "version": "1.0.0",
  "description": "Financial Agent Desktop Application",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev-frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-frontend": "cd ../frontend && npm run dev",
    "build": "cd ../frontend && npm run build",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "2.0.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.6.4",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.financial-agent.app",
    "productName": "Financial Agent",
    "files": [
      "main.js",
      "preload.js",
      "../frontend/dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
